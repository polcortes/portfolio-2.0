---
import { LANGUAGES } from '../i18n/'
---

<ul>
  {
    Object.entries(LANGUAGES).map(([key, value]) => (
      <li>
        <a href={`/${(value === 'es' ? '' : value+'/')}`}>{value}</a>
      </li>
      ))
  }
</ul>

<style>
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 40px;
    left: 40px;
    z-index: 1000;
  }
  li {
    display: inline;
    margin-right: 10px;
  }
  
  a {
    text-decoration: none;
    color: white;
    font-size: 20px;
    font-family: 'Montserrat Variable', sans-serif;
  }

  a:hover {
    text-decoration: underline;
    cursor: pointer;
  }
</style>